<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskmanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskManagement">
        <activity
            android:name=".UpdateTaskStatus"
            android:exported="false"
            android:parentActivityName=".ViewTask"/>
        <activity
            android:name=".TaskDetailActivity"
            android:exported="false"
            android:parentActivityName=".FounderDetailActivity" />
        <activity
            android:name=".LoginFounder"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ViewTask"
            android:exported="false"
            />
        <activity
            android:name=".NewTaskList"
            android:exported="false"
            android:parentActivityName=".StaffDetailsActivity" />
        <activity
            android:name=".StaffDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".CreateTaskActivity"
            android:exported="false"
            android:parentActivityName=".FounderDetailActivity" />
        <activity
            android:name=".TaskStatusActivity"
            android:exported="false"
            android:parentActivityName=".FounderDetailActivity" />
        <activity
            android:name=".FounderDetailActivity"
            android:exported="false" />
        <activity
            android:name=".LoginStaffActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.login.LoginFounderActivity"
            android:exported="false"
            android:label="@string/title_activity_login_founder" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>